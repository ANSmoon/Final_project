	<insert id="save" parameterType="UserData">
		INSERT INTO userdata (userId,
		nickName, userName, category, score, solveDate)
		VALUES (#{userId}, #{nickName},
		#{userName}, #{category}, #{score}, now())
	</insert>

    <select id="selectSearchList" parameterType="SearchCondition" resultType="UserData">
        SELECT * FROM userdata
        WHERE category = #{category}
        <if test="searchItem != 'none'">
         AND ${searchItem} = #{searchValue} AND 
        </if>
        ORDER BY ${orderSt} ${orderByDir};
    </select>

	<select id="selectCategory" parameterType="String"
		resultType="Problem">
		SELECT id AS problemId,
		question AS problemName, answer AS problemAnswer,
		#{category} AS category
		FROM ${category}
		ORDER BY RAND()
		LIMIT 10;
	</select>
